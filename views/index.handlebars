<div id="idTopContainer" class="container-fluid">
    <h1 id="idMainTitle" class="text-center">
        Encontre seu Emprego
    </h1>

    <p id="idMainSubTitle" class="text-center">
        Somos o Site com mais vagas de Tecnologia direcionadas a Home-Office
    </p>

    <form id="idBuscaForm" class="form-inline" action="/" method="GET">

        <div class="form-group col-md-10">
            <input id="idVagas" 
                   name="mdVaga" 
                   class="form-control" 
                   type="text" 
                   placeholder="Digite a Vaga:">
        </div>

        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">
                Procurar
            </button>
        </div>
    </form>
</div>

<!-- ConteÃºdo principal-->
<main>
    <div id="idVagasContainer" class="container">
        <div class="row">
            <div class="col-md 12">

                {{#if busca}}
                    <h2 id="idTituloListaVagas">Buscando vagas: {{busca}}</h2>
                {{else}}
                    <h2 id="idTituloListaVagas">Veja as nossas Vagas Existentes</h2>
                {{/if}}

                <ul id="idListaVagas" class="list-group">

                    {{#each vags}}
                        <li class="list-group-item {{#if dataValues.novo}}nova-vaga{{/if}}">
                            <img src="/img/company.svg" alt="Company">
                            <p>{{dataValues.empresa}}</p>
                            <h2>{{dataValues.titulo}}</h2>
                            <p>R$ {{dataValues.salario}}</p>

                            <span class="novaVagaLabel">Nova</span>

                            <a class="btn btn-primary" href="/rt-vagas/view-vaga/{{dataValues.id}}">
                                Ver Vaga
                            </a>
                        </li>
                    {{/each}}

                </ul>
            </div>
        </div>
    </div>
</main>